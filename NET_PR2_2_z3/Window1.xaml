<Window x:Class="NET_PR2_2_z3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_PR2_2_z3"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" FontSize="28">
    <Grid>
        <DataGrid
            ItemsSource="{Binding XPath=Nazwa}"
            AutoGenerateColumns="False"
            >
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Model"
                    Binding="{Binding XPath=Model}"
                    />
                <DataGridTextColumn
                    Header="Data Produkcji"
                    Binding="{Binding XPath=DataProdukcji}"
                    />
                <DataGridTextColumn
                    Header="Pojemność Silnika"
                    Binding="{Binding XPath=PojemnośćSilnika}"
                    />
                <DataGridTextColumn
                    Header="Moc Silnika"
                    Binding="{Binding XPath=MocSilnika}"
                    />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
